    <body bgcolor="PeachPuff">
      <nav>
        <ul>
          <li><a href='./'>Home</a></li>
          <li><a href="about">About</a></li>
          <li><a href="register">Register</a></li>
          <li><a href="login">Log In</a></li>
          <li><a href="addFood">Add Food</a></li>
          <li><a href="searchFood">Search Food</a></li>
